@section Scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="row">
    <div class="col-lg-12">
        <form data-bind="submit: createReservation">
            <h3>Create Reservation</h3>
            <div class="form-group">
                <label>Mobile Number:</label>
                <input type="text" class="form-control" data-bind="value: userId">
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input type="text" class="form-control" data-bind="value: email">
            </div>
            <div class="form-group">
                <label>Number of Guests:</label>
                <input type="text" class="form-control" data-bind="value: numberOfGuests">
            </div>
            <div class="form-group">
                <label>Time of Arrival:</label>
                <input type="text" class="form-control" data-bind="value: timeOfArrival">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Reserve</button>
            </div>
        </form>
    </div>
</div>