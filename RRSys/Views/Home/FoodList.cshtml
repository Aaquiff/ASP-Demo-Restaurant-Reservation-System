@section Scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="row">

    <div class="form-group error-messages" data-bind="foreach: errors">
        <div class="alert alert-danger">
            <p data-bind="text: $data" />
        </div>

    </div>
</div>

<div class="row" data-bind="onload: $parent.loadFoods">
    <div class="col-sm-4">
        <h3>Menu</h3>
        <div class="form-group error-messages" data-bind="foreach: foods">
            <div class="form-group">
                <label data-bind="text: $data.Name"></label>
                <div class="form-group">
                    <button class="btn btn-primary" data-bind="click: $parent.addFoods">Add To Cart</button>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <h3>Cart</h3>
        <div class="form-group error-messages" data-bind="foreach: selectedFoods">
            <div class="form-group">
                <label data-bind="text: $data.Name"></label>
            </div>
        </div>
    </div>
    <div class="col-sm-4" >
        <form data-bind="submit: createFoodOrder">
            <h3>Payment Information</h3>
            <div class="form-group" data-bind="value: paymentType">
                <label>Payment Method:</label>
                @*<select class="form-control">
                    <option value="cash">Cash</option>
                    <option value="credit">Credit Card</option>
                </select>*@
                <select class="form-control" data-bind="options: paymentTypes,
                       value: paymentType,
                       valueAllowUnset: false"></select>
            </div>          
            <div class="form-group">
                <label>Amount:</label>
                <input type="text" class="form-control" data-bind="value: amount">
            </div>
            <div class="form-group">
                <label>Credit Card Number:</label>
                <input type="text" class="form-control" data-bind="value: creditCardNumber">
            </div>
            <div class="form-group">
                <label>Cardholder Name:</label>
                <input type="text" class="form-control" data-bind="value: cardHolderName">
            </div>
            <div class="form-group">
                <label>CVC:</label>
                <input type="text" class="form-control" data-bind="value: cvc">
            </div>
            <div class="form-group">
                <button class="btn btn-success"type="submit">CheckOut</button>
            </div>
        </form>
    </div>

</div>
